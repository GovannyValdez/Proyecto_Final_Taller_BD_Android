<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empleados"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de empleados"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Agregar Empleado -->
    <Button
        android:id="@+id/btnAgregarEmpleado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agregar Empleado"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="60dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Consultar Empleado -->
    <Button
        android:id="@+id/btnConsultarEmpleado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consultar Empleado"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        android:backgroundTint="#1976D2"
        android:layout_marginTop="20dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAgregarEmpleado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Modificar Empleado -->
    <Button
        android:id="@+id/btnModificarEmpleado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modificar Empleado"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="20dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnConsultarEmpleado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Eliminar Empleado -->
    <Button
        android:id="@+id/btnEliminarEmpleado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Eliminar Empleado"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        android:backgroundTint="#D32F2F"
        android:layout_marginTop="20dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnModificarEmpleado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea separadora -->
    <View
        android:id="@+id/lineaSeparadora"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnEliminarEmpleado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Regresar al Menú -->
    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Regresar al Menú"
        android:textSize="16sp"
        android:paddingVertical="14dp"
        android:backgroundTint="#757575"
        android:layout_marginTop="24dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/lineaSeparadora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>